<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="false"
            card_view:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/lay_purpose_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edName"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_border"
                            android:elevation="10dp"
                            android:hint="Nama Puskesmas"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/add_properties_text"
                            android:textColorHint="@color/add_properties_text"
                            android:textSize="14sp"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:paddingLeft="8dp"
                            android:paddingRight="4dp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lay_purpose_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_purpose_phone"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edAlamat"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_border"
                            android:elevation="10dp"
                            android:hint="Alamat"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/add_properties_text"
                            android:textColorHint="@color/add_properties_text"
                            android:textSize="14sp"
                            android:theme="@style/ThemeOverlay.AppCompat.Light"
                            android:paddingLeft="8dp"
                            android:paddingRight="4dp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lay_purpose_feature_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_purpose_fur"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Foto Puskesmas"
                        android:textColor="@color/add_properties_text"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rlImageEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagePuskesmas"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/textSelectImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="5dp"
                            android:drawableStart="@drawable/add_image"
                            android:gravity="center"
                            android:text="@string/select_image"
                            android:textColor="@color/add_properties_text"
                            android:textSize="14sp"
                            android:visibility="visible"
                            android:drawableLeft="@drawable/add_image" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_purpose_fur"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Lokasi Puskesmas"
                        android:textColor="@color/add_properties_text"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical">


                        <Button
                            android:id="@+id/btnLokasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            app:backgroundTint="@null"
                            android:background="@drawable/button_login_skip_background"
                            android:text="Ubah Lokasi"
                            android:textColor="@color/orange"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_purpose_gallery_image"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnEditPuskesmas"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/submit_button"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:elevation="0dp"
                        android:text="Simpan"
                        card_view:backgroundTint="@null"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>